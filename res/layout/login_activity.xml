<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back" >

    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_login_margin"
        android:gravity="center"
        android:maxLength="30"
        android:text="Login"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="16dp"
        android:background="@drawable/fild"
        android:ems="10"
        android:hint="type yout password"
        android:inputType="textPassword"
        android:maxLength="16"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_login_button"
        android:text="Okay"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_margin"
        android:background="@drawable/fild"
        android:ems="10"
        android:hint="type yout email"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <com.facebook.widget.LoginButton
        android:id="@+id/loginBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/or_margin"
        android:textSize="20sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/login_shadow_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44999999"
        android:clickable="true"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/login_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>